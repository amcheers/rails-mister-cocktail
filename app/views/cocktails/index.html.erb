<h1>Cocktails (<%= @cocktails.count %>)</h1>


  
    <% @cocktails.each do |cocktail| %>

    <div class="card-category m-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
        <%= link_to cocktail.name, cocktail_path(cocktail) %>
    </div>

      
    <% end %>
  


<%= link_to 'Create a cocktail', new_cocktail_path, class: 'btn btn-primary' %>

